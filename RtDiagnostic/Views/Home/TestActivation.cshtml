    ViewBag.Title = "Test Activation";
}

<div class="jumbotron">
    <h5 class="text-center" style="color:lightgrey">Home/Register Kit</h5>
    <h1 class="text-center" style="color: #220c3c !important">Test Activation</h1>
    @*<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>
<div class="jumbotron" style="  border-top-right-radius: 7%; border-top-left-radius: 7%;">
    <p class="text-center" style="color:darkgray">
        <b>Sheeraz Ahmed</b> you are now viewing this page as another user from your group.
        <a href="#">Switch back to the lead user.</a>
    </p>
    <p class="text-center" style="color:darkgray">
        Be careful! Test can't be reactivated to another person!
    </p>
    @*<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
    <div class="row">
        <div class="col-lg-12 col-md-6 p-2">
            <div class="card  text-white hvr-glow text-center" style="background-color: #220c3c !important; ">

                <p class="text-white font-weight-bold">
                    To ensure that the correct test is assigned to you the
                    test's barcode needs to be scanned into your record.
                </p>

            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <form class="pl-5 pr-5">

                <div class="form-group">
                    <label for="exampleInputEmail1">1. Write the following code on the sample tube as a secondary identifier</label>
                    <input readonly type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter First Name" value="B21-110-616">
                    <small class="form-text text-muted">Ignore this in case of lateral flow test.</small>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">2. Write your Date of Birth on the sample tube as another identifier</label>
                    <input readonly type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter First Name" value="n/a">
                    <small class="form-text text-muted">Ignore this in case of lateral flow test.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">3. Enter or scan the barcode from the sample tube in the box below</label>
                    <span style="        border-radius: 5px;
        display: flex;
        border: 1px solid lightgray;
        padding: 4px;">
                        <i class="fas fa-trash" style="        height: 34px;font-size: 15px; color: #e95b5b; margin-right: 4px;"></i>
                        <input style="border: none;  background: none" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Bar Code....">
                        <i class="fas fa-camera" style=" height: 34px; font-size: 15px; /* padding-right: 2px; */ margin-left: 4px;"></i>
                    </span>

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">3. Please Repeat Barcode</label>
                    <span style="        border-radius: 5px;
        display: flex;
        border: 1px solid lightgray;
        padding: 4px;">
                        <i class="fas fa-trash" style="        height: 34px;font-size: 15px; color: #e95b5b; margin-right: 4px;"></i>
                        <input style="border: none;  background: none" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Repeat Bar Code....">
                        <i class="fas fa-camera" style=" height: 34px; font-size: 15px; /* padding-right: 2px; */ margin-left: 4px;"></i>
                    </span>

                </div>

            </form>
        </div>
        <div class="col-md-3">

        </div>
        
    </div>
    <div class="row float-right">
        <a href="/Home/Completion" class="btn btn-primary float-right">Submit</a>
    </div>
</div>

